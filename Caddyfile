{
    auto_https off
    admin off
    
    frankenphp {
        num_threads 1
    }
}

:{$PORT:8080} {
    root * /app/public
    encode gzip
    
    # Try to serve files directly, fallback to PHP
    try_files {path} {path}/ /index.php?{query}
    
    # Execute PHP without worker mode
    php
    
    file_server
}
